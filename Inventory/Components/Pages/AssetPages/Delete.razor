@page "/assets/delete"
@using Inventory.Application
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject NavigationManager NavigationManager
@inject IAssetService Service

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Asset</h2>
    <hr />
    @if (asset is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@asset.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsFolder</dt>
            <dd class="col-sm-10">@asset.IsFolder</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsEquipment</dt>
            <dd class="col-sm-10">@asset.IsEquipment</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SerialNumber</dt>
            <dd class="col-sm-10">@asset.SerialNumber</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ParentId</dt>
            <dd class="col-sm-10">@asset.ParentId</dd>
        </dl>
        <EditForm method="post" Model="asset" OnValidSubmit="DeleteAsset" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(asset is null)">Delete</button> |
            <a href="/assets">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Asset? asset;

    [SupplyParameterFromQuery]
    private string? Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Id is not null)
            asset = await Service.Get(Id);

        if (asset is null)
            NavigationManager.NavigateTo("notfound");
    }

    private async Task DeleteAsset()
    {
        await Service.Delete(asset!);

        NavigationManager.NavigateTo("/assets");
    }
}
