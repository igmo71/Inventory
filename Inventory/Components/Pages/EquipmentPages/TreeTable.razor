@using Inventory.Application
@using Inventory.Domain

@inject IEquipmentService Service

@if (EquipmentVms != null)
{
    <table class="table">
        <thead></thead>
        <tbody>
            @foreach (var vm in EquipmentVms)
            {
                <tr>
                    <td>
                        <div class="row">
                            <div class="col-1" @onclick="() => Expand(vm)">
                                @if (vm.IsFolder)
                                {
                                    @if (isExpanded)
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder2-open" viewBox="0 0 16 16">
                                            <path d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v.64c.57.265.94.876.856 1.546l-.64 5.124A2.5 2.5 0 0 1 12.733 15H3.266a2.5 2.5 0 0 1-2.481-2.19l-.64-5.124A1.5 1.5 0 0 1 1 6.14V3.5zM2 6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3H2.5a.5.5 0 0 0-.5.5V6zm-.367 1a.5.5 0 0 0-.496.562l.64 5.124A1.5 1.5 0 0 0 3.266 14h9.468a1.5 1.5 0 0 0 1.489-1.314l.64-5.124A.5.5 0 0 0 14.367 7H1.633z" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder" viewBox="0 0 16 16">
                                            <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a1.99 1.99 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4H2.19zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139C1.72 3.042 1.95 3 2.19 3h5.396l-.707-.707z" />
                                        </svg>
                                    }
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-wrench-adjustable-circle" viewBox="0 0 16 16">
                                        <path d="M12.496 8a4.491 4.491 0 0 1-1.703 3.526L9.497 8.5l2.959-1.11c.027.2.04.403.04.61Z" />
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0Zm-1 0a7 7 0 1 0-13.202 3.249l1.988-1.657a4.5 4.5 0 0 1 7.537-4.623L7.497 6.5l1 2.5 1.333 3.11c-.56.251-1.18.39-1.833.39a4.49 4.49 0 0 1-1.592-.29L4.747 14.2A7 7 0 0 0 15 8Zm-8.295.139a.25.25 0 0 0-.288-.376l-1.5.5.159.474.808-.27-.595.894a.25.25 0 0 0 .287.376l.808-.27-.595.894a.25.25 0 0 0 .287.376l1.5-.5-.159-.474-.808.27.596-.894a.25.25 0 0 0-.288-.376l-.808.27.596-.894Z" />
                                    </svg>
                                }
                            </div>
                            <div class="col-8" @onclick="() => Click(vm)">
                                @vm.Name
                            </div>
                            <div class="col-3">
                                <a href="@($"equipment/edit?id={vm.Id}")">Изменить</a> |
                                <a href="@($"equipment/details?id={vm.Id}")">Детали</a> |
                                <a href="@($"equipment/delete?id={vm.Id}")">Удалить</a>
                            </div>
                        </div>
                    </td>
                </tr>
                @if (isExpanded && vm.Children != null)
                {
                    <tr>
                        <td>
                            <TreeTable EquipmentVms="vm.Children.Select(e => new EquipmentVm(e)).ToList()" OnClick="OnClick"></TreeTable>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

@code {
    [Parameter] public List<EquipmentVm>? EquipmentVms { get; set; }

    [Parameter] public EventCallback<EquipmentVm> OnClick { get; set; }

    private bool isExpanded;

    private async Task Expand(EquipmentVm vm)
    {
        if (vm.Id == null)
            return;

        vm.Expanded = isExpanded = !vm.Expanded;

        if (vm.IsFolder)
        {
            if (vm.Expanded)
                vm.Children = await Service.GetChildren(vm.Id);
            else
                vm.Children = null;
        }
        else{
            if (OnClick.HasDelegate)
                await OnClick.InvokeAsync(vm);
        }
    }

    private async Task Click(EquipmentVm vm)
    {
        if (OnClick.HasDelegate)
            await OnClick.InvokeAsync(vm);
    }
}
