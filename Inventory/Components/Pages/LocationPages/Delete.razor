@page "/locations/delete"
@using Inventory.Application
@using Inventory.Domain
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavigationManager
@inject ILocationService Service

@attribute [Authorize]

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>    
<div>
    <h2>Location</h2>
    <hr />
    @if (location is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@location.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsFolder</dt>
            <dd class="col-sm-10">@location.IsFolder</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ParentId</dt>
            <dd class="col-sm-10">@location.ParentId</dd>
        </dl>
        <EditForm method="post" Model="location" OnValidSubmit="DeleteLocation" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(location is null)">Delete</button> |
            <a href="/locations">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Location? location;

    [SupplyParameterFromQuery]
    private string? Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Id is not null)
            location = await Service.Get(Id);

        if (location is null)
            NavigationManager.NavigateTo("notfound");
    }

    private async Task DeleteLocation()
    {
        await Service.Delete(location!);

        NavigationManager.NavigateTo("/locations");
    }
}
