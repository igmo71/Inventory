@page "/materialorderitems/delete"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MaterialOrderItem</h2>
    <hr />
    @if (materialorderitem is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">OrderId</dt>
            <dd class="col-sm-10">@materialorderitem.OrderId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">MayerialId</dt>
            <dd class="col-sm-10">@materialorderitem.MayerialId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Count</dt>
            <dd class="col-sm-10">@materialorderitem.Count</dd>
        </dl>
        <EditForm method="post" Model="materialorderitem" OnValidSubmit="DeleteMaterialOrderItem" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(materialorderitem is null)">Delete</button> |
            <a href="/materialorderitems">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MaterialOrderItem? materialorderitem;

    [SupplyParameterFromQuery]
    private string? Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        materialorderitem = await context.MaterialOrderItems.FirstOrDefaultAsync(m => m.Id == Id);

        if (materialorderitem is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMaterialOrderItem()
    {
        using var context = DbFactory.CreateDbContext();
        context.MaterialOrderItems.Remove(materialorderitem!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/materialorderitems");
    }
}
