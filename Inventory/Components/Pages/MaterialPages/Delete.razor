@page "/materials/delete"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Material</h2>
    <hr />
    @if (material is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@material.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsFolder</dt>
            <dd class="col-sm-10">@material.IsFolder</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ParentId</dt>
            <dd class="col-sm-10">@material.ParentId</dd>
        </dl>
        <EditForm method="post" Model="material" OnValidSubmit="DeleteMaterial" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(material is null)">Delete</button> |
            <a href="/materials">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Material? material;

    [SupplyParameterFromQuery]
    private string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        material = await context.Materials.FirstOrDefaultAsync(m => m.Id == Id);

        if (material is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMaterial()
    {
        using var context = DbFactory.CreateDbContext();
        context.Materials.Remove(material!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/materials");
    }
}
