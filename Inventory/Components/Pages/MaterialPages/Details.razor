@page "/materials/details"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Material</h2>
    <hr />
    @if (material is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@material.Name</dd>
            <dt class="col-sm-2">IsFolder</dt>
            <dd class="col-sm-10">@material.IsFolder</dd>
            <dt class="col-sm-2">ParentId</dt>
            <dd class="col-sm-10">@material.ParentId</dd>
        </dl>
        <div>
            <a href="@($"/materials/edit?id={material.Id}")">Edit</a> |
            <a href="@($"/materials")">Back to List</a>
        </div>
    }
</div>

@code {
    private Material? material;

    [SupplyParameterFromQuery]
    private string? Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        material = await context.Materials.FirstOrDefaultAsync(m => m.Id == Id);

        if (material is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
