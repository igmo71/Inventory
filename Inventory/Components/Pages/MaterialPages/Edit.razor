@page "/materials/edit"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Material</h2>
<hr />
@if (Material is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Material" OnValidSubmit="UpdateMaterial" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Material.Id" value="@Material.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Material.Name" class="form-control" />
                    <ValidationMessage For="() => Material.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="isfolder" class="form-label">IsFolder:</label>
                    <InputCheckbox id="isfolder" @bind-Value="Material.IsFolder" class="form-check-input" />
                    <ValidationMessage For="() => Material.IsFolder" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="parentid" class="form-label">ParentId:</label>
                    <InputText id="parentid" @bind-Value="Material.ParentId" class="form-control" />
                    <ValidationMessage For="() => Material.ParentId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/materials">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private string Id { get; set; }

    [SupplyParameterFromForm]
    private Material? Material { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Material ??= await context.Materials.FirstOrDefaultAsync(m => m.Id == Id);

        if (Material is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateMaterial()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Material!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!MaterialExists(Material!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/materials");
    }

    private bool MaterialExists(string id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Materials.Any(e => e.Id == id);
    }
}
