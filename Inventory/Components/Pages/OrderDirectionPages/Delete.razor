@page "/orderdirections/delete"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>OrderDirection</h2>
    <hr />
    @if (orderdirection is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@orderdirection.Name</dd>
        </dl>
        <EditForm method="post" Model="orderdirection" OnValidSubmit="DeleteOrderDirection" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(orderdirection is null)">Delete</button> |
            <a href="/orderdirections">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private OrderDirection? orderdirection;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        orderdirection = await context.OrderDirections.FirstOrDefaultAsync(m => m.Id == Id);

        if (orderdirection is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteOrderDirection()
    {
        using var context = DbFactory.CreateDbContext();
        context.OrderDirections.Remove(orderdirection!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/orderdirections");
    }
}
