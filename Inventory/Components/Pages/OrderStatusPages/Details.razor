@page "/orderstatuses/details"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>OrderStatus</h2>
    <hr />
    @if (orderstatus is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@orderstatus.Name</dd>
        </dl>
        <div>
            <a href="@($"/orderstatuses/edit?id={orderstatus.Id}")">Edit</a> |
            <a href="@($"/orderstatuses")">Back to List</a>
        </div>
    }
</div>

@code {
    private OrderStatus? orderstatus;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        orderstatus = await context.OrderStatuses.FirstOrDefaultAsync(m => m.Id == Id);

        if (orderstatus is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
