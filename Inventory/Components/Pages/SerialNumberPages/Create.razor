@page "/serialnumbers/create"
@using Inventory.Application
@using Inventory.Domain
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavigationManager
@inject ISerialNumberService Service

@attribute [Authorize]

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>SerialNumber</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="SerialNumber" OnValidSubmit="AddSerialNumber" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="assetid" class="form-label">AssetId:</label> 
                <InputText id="assetid" @bind-Value="SerialNumber.EquipmentId" class="form-control" /> 
                <ValidationMessage For="() => SerialNumber.EquipmentId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="number" class="form-label">Number:</label> 
                <InputText id="number" @bind-Value="SerialNumber.Number" class="form-control" /> 
                <ValidationMessage For="() => SerialNumber.Number" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/serialnumbers">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private SerialNumber SerialNumber { get; set; } = new();

    private async Task AddSerialNumber()
    {
        string id = await Service.Create(SerialNumber);

        NavigationManager.NavigateTo("/serialnumbers");
    }
}
