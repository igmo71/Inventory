@page "/serialnumbers/delete"
@using Microsoft.EntityFrameworkCore
@using Inventory.Domain
@inject IDbContextFactory<Inventory.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>SerialNumber</h2>
    <hr />
    @if (serialnumber is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">AssetId</dt>
            <dd class="col-sm-10">@serialnumber.AssetId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Number</dt>
            <dd class="col-sm-10">@serialnumber.Number</dd>
        </dl>
        <EditForm method="post" Model="serialnumber" OnValidSubmit="DeleteSerialNumber" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(serialnumber is null)">Delete</button> |
            <a href="/serialnumbers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private SerialNumber? serialnumber;

    [SupplyParameterFromQuery]
    private string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        serialnumber = await context.SerialNumbers.FirstOrDefaultAsync(m => m.Id == Id);

        if (serialnumber is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSerialNumber()
    {
        using var context = DbFactory.CreateDbContext();
        context.SerialNumbers.Remove(serialnumber!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/serialnumbers");
    }
}
