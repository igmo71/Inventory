@page "/serialnumbers"
@using Inventory.Application
@using Inventory.Domain
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@inject ISerialNumberService Service

@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="serialnumbers/create">Create New</a>
</p>

<QuickGrid Class="table" ItemsProvider="itemsProvider">
    <PropertyColumn Property="serialnumber => serialnumber.Id" />
    <PropertyColumn Property="serialnumber => serialnumber.EquipmentId" />
    <PropertyColumn Property="serialnumber => serialnumber.Number" />

    <TemplateColumn Context="serialnumber">
        <a href="@($"serialnumbers/edit?id={serialnumber.Id}")">Edit</a> |
        <a href="@($"serialnumbers/details?id={serialnumber.Id}")">Details</a> |
        <a href="@($"serialnumbers/delete?id={serialnumber.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    GridItemsProvider<SerialNumber>? itemsProvider;

    protected override void OnInitialized()
    {
        itemsProvider = async request =>
        {
            var result = await Service.GetList(request.StartIndex, request.Count);

            if (!result.IsSuccess || result.Value is null)
                return default;

            var response = GridItemsProviderResult.From(
                items: result.Value,
                totalItemCount: result.Total
            );

            return response;
        };
    }
}
