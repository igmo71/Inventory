@page "/stockturnovers"
@using Inventory.Application
@using Inventory.Domain
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@inject IStockTurnoverService Service

@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="stockturnovers/create">Create New</a>
</p>

<QuickGrid Class="table" ItemsProvider="itemsProvider">
    <PropertyColumn Property="stockturnover => stockturnover.DateTime" />
    <PropertyColumn Property="stockturnover => stockturnover.OrderId" />
    <PropertyColumn Property="stockturnover => stockturnover.AssetId" />
    <PropertyColumn Property="stockturnover => stockturnover.SerialNumberId" />
    <PropertyColumn Property="stockturnover => stockturnover.LocationId" />
    <PropertyColumn Property="stockturnover => stockturnover.AssigneeId" />
    <PropertyColumn Property="stockturnover => stockturnover.OpeningBalance" />
    <PropertyColumn Property="stockturnover => stockturnover.Receipt" />
    <PropertyColumn Property="stockturnover => stockturnover.Expense" />
    <PropertyColumn Property="stockturnover => stockturnover.ClosingBalance" />

    <TemplateColumn Context="stockturnover">
        <a href="@($"stockturnovers/edit?id={stockturnover.Id}")">Edit</a> |
        <a href="@($"stockturnovers/details?id={stockturnover.Id}")">Details</a> |
        <a href="@($"stockturnovers/delete?id={stockturnover.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    GridItemsProvider<StockTurnover>? itemsProvider;

    protected override void OnInitialized()
    {
        itemsProvider = async request =>
        {
            var result = await Service.GetList(request.StartIndex, request.Count);

            if (!result.IsSuccess || result.Value is null)
                return default;

            var response = GridItemsProviderResult.From(
                items: result.Value,
                totalItemCount: result.Total
            );

            return response;
        };
    }
}
